<Page x:Class="StoreManager.StoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreManager"
      xmlns:lex="http://wpflocalizeextension.codeplex.com"
      lex:ResxLocalizationProvider.DefaultAssembly="StoreManager"
      lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="StoragePage">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="{lex:Loc StoragePage_title}" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"
                           VerticalAlignment="Center"/>
                <Button Content="{lex:Loc StoragePage_backButton}" 
                        Style="{StaticResource SecondaryButton}" 
                        Margin="20,0,0,0"
                        Click="BackButton_Click"/>
            </StackPanel>

            <Border Grid.Row="1" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="12" 
                    Padding="16"
                    Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.05" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="SearchTextBox" 
                             Grid.Column="0"
                             Style="{StaticResource ModernTextBox}"
                             FontSize="16"
                             Padding="16,12"
                             TextChanged="SearchTextBox_TextChanged"/>
                    
                    <TextBlock Grid.Column="0" 
                               Text="{lex:Loc StoragePage_searchPlaceholder}" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Button Grid.Column="1" 
                            Content="{lex:Loc StoragePage_searchButton}" 
                            Style="{StaticResource ModernButton}"
                            Margin="12,0,0,0"
                            MinWidth="100"
                            Click="SearchButton_Click"/>

                    <Button Grid.Column="2" 
                            Content="{lex:Loc StoragePage_addNewButton}" 
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource SuccessColor}"
                            Margin="12,0,0,0"
                            MinWidth="120"
                            Click="AddNewProduct_Click"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.05" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F9FAFB" 
                            CornerRadius="12,12,0,0"
                            Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{lex:Loc StoragePage_idColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Column="1" Text="{lex:Loc StoragePage_nameColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Grid.Column="2" Text="{lex:Loc StoragePage_unitColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{lex:Loc StoragePage_stockColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="4" Text="{lex:Loc StoragePage_supplierPriceColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="5" Text="{lex:Loc StoragePage_salePriceColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="6" Text="{lex:Loc StoragePage_actionsColumn}" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ListView x:Name="ProductsListView"
                              Grid.Row="1"
                              Margin="16,8"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="0"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <!-- Use a plain VirtualizingStackPanel for predictable layout -->
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <!-- Remove default ListViewItem padding/selection visuals so rows align with header -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="IsTabStop" Value="False"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:ProductViewModel}">
                                <Border BorderBrush="{StaticResource BorderColor}" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="0,12"
                                        Margin="0,4"
                                        HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Id}" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Unit}" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding StockFormatted}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="4" 
                                                   Text="{Binding SupplierPriceFormatted}" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="5" 
                                                   Text="{Binding SalePriceFormatted}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="6" 
                                                    Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <Button Content="✏" 
                                                    Width="32" Height="32"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Padding="0"
                                                    FontSize="16"
                                                    Margin="0,0,4,0"
                                                    Click="EditProduct_Click"
                                                    Tag="{Binding}"
                                                    ToolTip="{lex:Loc StoragePage_editTooltip}"/>
                                            <Button Content="🗑" 
                                                    Width="32" Height="32"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Padding="0"
                                                    FontSize="16"
                                                    Click="DeleteProduct_Click"
                                                    Tag="{Binding}"
                                                    ToolTip="{lex:Loc StoragePage_deleteTooltip}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="1" 
                                x:Name="EmptyListPanel"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="📦" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="{lex:Loc StoragePage_emptyListTitle}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{lex:Loc StoragePage_emptyListMessage}" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Border x:Name="EditPanel"
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="12" 
                    Padding="24"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.05" Color="#000000"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock Text="{lex:Loc StoragePage_editPanelTitle}" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="{lex:Loc StoragePage_productIdLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditIdTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_productNameLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditNameTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_unitLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditUnitTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_stockLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditStockTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_supplierPriceLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditSupplierPriceTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_salePriceLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditSalePriceTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <TextBlock Text="{lex:Loc StoragePage_vatPercentageLabel}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EditVatTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>

                        <CheckBox x:Name="EditFractionableCheckBox"
                                  Content="{lex:Loc StoragePage_fractionableLabel}"
                                  Foreground="{StaticResource TextPrimary}"
                                  Margin="0,0,0,24"/>

                        <Button Content="{lex:Loc StoragePage_saveButton}" 
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource SuccessColor}"
                                Padding="0,14"
                                FontSize="16"
                                Click="SaveProduct_Click"
                                Margin="0,0,0,12"/>

                        <Button Content="{lex:Loc StoragePage_cancelButton}" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="0,14"
                                Click="CancelEdit_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
