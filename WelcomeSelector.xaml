<Page x:Class="StoreManager.WelcomeSelector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:lex="http://wpflocalizeextension.codeplex.com"
      lex:ResxLocalizationProvider.DefaultAssembly="StoreManager"
      lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
      Title="WelcomeSelector">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="3" Content="{lex:Loc WelcomeSelector_welcome}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="{lex:Loc WelcomeSelector_cashierBtn}" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center"/>
        <Button Content="{lex:Loc WelcomeSelector_storageBtn}" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
        <Button Grid.Column="1" Content="{lex:Loc WelcomeSelector_languageBtn}" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>



    </Grid>
</Page>
